{
  "compilerOptions": {
    /* Modules */
    "rootDir": "src",
    "outDir": "dist",

    /* Relax TypeScript strictness for server build */
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false,
    "noUnusedLocals": false,
    "noImplicitReturns": false,
    "checkJs": false
  },
  "include": ["src"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
